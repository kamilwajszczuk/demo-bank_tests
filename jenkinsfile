pipeline {
    agent any
    environment {
        HOME = '/root'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm ci'
            }
        }
       
    stage('install playwright') {
      steps {
        sh '''
          npm i -D @playwright/test
          npx playwright install
        '''
      }
    }

    stage('test') {
      steps {
        sh '''
          npx playwright test --list
          npx playwright test
        '''
      }
    
    post {
        success {
            echo 'Testy zakończyły się sukcesem!'
        }
        failure {
            echo 'Testy nie powiodły się.'
        }
    }
}
}
}
