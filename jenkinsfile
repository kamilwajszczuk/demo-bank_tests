pipeline {
    agent any

    tools {
        // Ustaw wersję Node.js, którą chcesz użyć
        nodejs 'NodeJS_14' // nazwa instalacji zdefiniowanej w Jenkinsie
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Playwright Tests') {
            steps {
                sh 'npx playwright test'
            }
        }
    }
    post {
        success {
            echo 'Testy zakończyły się sukcesem!'
        }
        failure {
            echo 'Testy nie powiodły się.'
        }
    }
}
