pipeline {
    agent any

    environment {
        // Ustawienia środowiska, np. wersja Node.js
        NODE_VERSION = '22.13.1' // lub inna wersja, którą używasz
    }

    stages {
        stage('Checkout') {
            steps {
                // Pobierz kod z repozytorium
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Zainstaluj zależności
                sh 'npm install'
            }
        }

        stage('Run Playwright Tests') {
            steps {
                // Uruchom testy Playwright
                sh 'npx playwright test'
            }
        }
    }

    post {
        success {
            echo 'Testy zakończyły się sukcesem!'
        }
        failure {
            echo 'Testy nie powiodły się.'
        }
    }
}